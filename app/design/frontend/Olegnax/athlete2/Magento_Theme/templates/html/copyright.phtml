						<small class="copyright">
							<span><?= /* @noEscape */ $copyrightText /* $block->getCopyright() */ ?></span>
						</small>
					</div>
					<div class="col-12 col-md-6 copyright-right">
						<?= /* @noEscape */ $customContent; ?>
					</div>
				</div>
			</div>
		</div>
	<?php } ?>
<?php } ?>