							<resource id="Olegnax_BannerSlider::Group_Delete" sortOrder="40" title="Delete Group"/>
						</resource>
						<resource id="Olegnax_BannerSlider::Slide_Index" sortOrder="20" title="Slides">
							<resource id="Olegnax_BannerSlider::Slide_New" sortOrder="10" title="Create New Slide"/>
							<resource id="Olegnax_BannerSlider::Slide_Edit" sortOrder="20" title="Edit Slide"/>
							<resource id="Olegnax_BannerSlider::Slide_Delete" sortOrder="40" title="Delete Slide"/>
