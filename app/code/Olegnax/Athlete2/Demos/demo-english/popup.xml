<root>
	<config>
		<olegnax_newsletterpopupbasic>
			<general>
				<enable>1</enable>
				<many_times>everytime</many_times>
				<layout>-fullwidth</layout>
				<timeout>1000</timeout>
				<show_mobile>1</show_mobile>
				<width>446</width>
				<height>446</height>
				<mobile_width></mobile_width>
				<mobile_height></mobile_height>
				<mobile_image_height></mobile_image_height>
				<column_width></column_width>
				<padding></padding>
				<tablet_padding></tablet_padding>
				<mobile_padding></mobile_padding>
				<content_padding>50</content_padding>
				<tablet_content_padding></tablet_content_padding>
				<mobile_content_padding>30</mobile_content_padding>
				<position_h>h-center</position_h>
				<position_v>v-center</position_v>
				<form_layout>button-below</form_layout>
				<content_position_h>h-center</content_position_h>
				<content_position_v>v-center</content_position_v>
				<show_shadow>0</show_shadow>
				<clickable_overlay>0</clickable_overlay>
			</general>
			<content>
				<column_image></column_image>
				<content><![CDATA[<div class="ox-bg-text"><div class="h1">SIGN UP &amp;</div></div>
<div class="ox-bg-text"><div class="h1">GET 10% OFF</div></div>
<div class="spacer" style="height:25px"></div>
<p class="medium-text hide-on-s" style="line-height: 1.4;     margin-bottom: 30px;">* Quisque mauris dui, viverra non quam quis, maximus malesuada nunc. </p>
{{block class="Magento\Newsletter\Block\Subscribe" template="Magento_Newsletter::subscribe_form.phtml"}}
<a href="#" class="ox-newsletter-disable__link" style="border-bottom: 1px solid">Donâ€™t show this popup again.</a>]]></content>
			</content>
			<appearance>
				<background_color>rgb(251, 230, 45)</background_color>
				<bg_image_enabled>1</bg_image_enabled>
				<background_image>Demos/default/newsletter-en-bg.jpg</background_image>
				<bg_position_y>center</bg_position_y>
				<bg_position_x>center</bg_position_x>
				<bg_repeat>no-repeat</bg_repeat>
				<bg_size>contain</bg_size>
				<newsletter_input_style>normal</newsletter_input_style>
				<newsletter_text_color>rgb(0, 0, 0)</newsletter_text_color>
				<newsletter_titles_color></newsletter_titles_color>
				<close_button_bg>rgb(251, 230, 45)</close_button_bg>
				<close_button_icon_color>rgb(0, 0, 0)</close_button_icon_color>
				<close_button_bg_hover>rgb(0, 0, 0)</close_button_bg_hover>
				<close_button_icon_color_hover>rgb(255, 254, 254)</close_button_icon_color_hover>
				<newsletter_input_bg></newsletter_input_bg>
				<newsletter_input_border_color></newsletter_input_border_color>
				<newsletter_input_border_focus></newsletter_input_border_focus>
				<newsletter_color></newsletter_color>
				<newsletter_button_color>rgb(255, 255, 255)</newsletter_button_color>
				<newsletter_button_bg>rgb(0, 0, 0)</newsletter_button_bg>
				<newsletter_button_hover>rgb(0, 0, 0)</newsletter_button_hover>
				<newsletter_button_hover_bg>rgb(255, 255, 255)</newsletter_button_hover_bg>
				<newsletter_input_color></newsletter_input_color>
