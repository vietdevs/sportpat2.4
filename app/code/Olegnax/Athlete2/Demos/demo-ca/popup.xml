<root>
	<config>
                <olegnax_newsletterpopupbasic>
			<general>
				<enable>1</enable>
				<many_times>everytime</many_times>
				<layout>-fullwidth</layout>
				<timeout>1000</timeout>
				<show_mobile>1</show_mobile>
				<width>540</width>
				<height></height>
				<mobile_width></mobile_width>
				<mobile_height></mobile_height>
				<mobile_image_height></mobile_image_height>
				<column_width></column_width>
				<padding>0</padding>
				<tablet_padding></tablet_padding>
				<mobile_padding></mobile_padding>
				<content_padding>40</content_padding>
				<tablet_content_padding></tablet_content_padding>
				<mobile_content_padding>20</mobile_content_padding>
				<position_h>h-left</position_h>
				<position_v>v-bottom</position_v>
				<form_layout>one-line</form_layout>
				<content_position_h>h-left</content_position_h>
				<content_position_v>v-center</content_position_v>
				<show_shadow>0</show_shadow>
				<clickable_overlay>0</clickable_overlay>
			</general>
			<content>
				<column_image></column_image>
				<content><![CDATA[<h2><strong>Get the latest<br>
deals and more.</strong></h2>
<p class="hide-on-mobile">Fusce rhoncus tortor sit amet lacus blandit, ac placerat efficitur. Vivamus non ornare ante, sit amet mattis felis. Nullam nec purus arcu.  </p>
{{block class="Magento\Newsletter\Block\Subscribe" template="Magento_Newsletter::subscribe_form.phtml"}}
<a href="#" class="ox-newsletter-disable__link ox-grey-underline">Thank you , I already subscribed.</a>]]></content>
			</content>
			<appearance>
				<background_color></background_color>
				<bg_image_enabled>0</bg_image_enabled>
				<background_image></background_image>
				<bg_position_y>center</bg_position_y>
				<bg_position_x>center</bg_position_x>
				<bg_repeat>no-repeat</bg_repeat>
				<bg_size>cover</bg_size>
				<newsletter_input_style>normal</newsletter_input_style>
				<newsletter_text_color>rgb(117, 117, 117)</newsletter_text_color>
				<newsletter_titles_color></newsletter_titles_color>
				<close_button_bg>rgb(255, 255, 255)</close_button_bg>
				<close_button_icon_color>rgb(32, 32, 32)</close_button_icon_color>
				<close_button_bg_hover>rgb(32, 32, 32)</close_button_bg_hover>
				<close_button_icon_color_hover>rgb(255, 255, 255)</close_button_icon_color_hover>
				<newsletter_input_bg></newsletter_input_bg>
				<newsletter_input_border_color>rgb(221, 221, 221)</newsletter_input_border_color>
				<newsletter_input_border_focus>rgb(61, 61, 61)</newsletter_input_border_focus>
				<newsletter_color></newsletter_color>
				<newsletter_button_color></newsletter_button_color>
				<newsletter_button_bg></newsletter_button_bg>
				<newsletter_button_hover></newsletter_button_hover>
				<newsletter_button_hover_bg></newsletter_button_hover_bg>
				<newsletter_input_color>rgb(94, 94, 94)</newsletter_input_color>
			</appearance>
		</olegnax_newsletterpopupbasic>
	</config>
</root>
