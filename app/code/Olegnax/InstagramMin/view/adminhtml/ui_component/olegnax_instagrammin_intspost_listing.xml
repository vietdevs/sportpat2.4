<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">olegnax_instagrammin_intspost_listing.olegnax_instagrammin_intspost_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<buttons>
			<button name="update">
				<url path="*/*/update"/>
				<class>primary</class>
				<label translate="true">Update Posts</label>
			</button>
		</buttons>
		<spinner>olegnax_instagrammin_intspost_columns</spinner>
		<deps>
			<dep>olegnax_instagrammin_intspost_listing.olegnax_instagrammin_intspost_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="olegnax_instagrammin_intspost_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Olegnax_InstagramMin::IntsPost</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="olegnax_instagrammin_intspost_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>intspost_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
		<massaction name="listing_massaction">
			<action name="delete">
				<settings>
					<confirm>
						<message translate="true">Are you sure you want to delete selected items?</message>
						<title translate="true">Delete items</title>
					</confirm>
					<url path="*/*/delete"/>
					<type>delete</type>
					<label translate="true">Delete</label>
				</settings>
			</action>
			<action name="disable">
				<settings>
					<url path="*/*/disable"/>
					<type>disable</type>
					<label translate="true">Disable</label>
				</settings>
			</action>
			<action name="enable">
				<settings>
					<url path="*/*/enable"/>
					<type>enable</type>
					<label translate="true">Enable</label>
				</settings>
			</action>
		</massaction>
	</listingToolbar>
	<columns name="olegnax_instagrammin_intspost_columns">
		<selectionsColumn name="ids">
			<settings>
				<indexField>intspost_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="ints_id" sortOrder="10">
			<settings>
				<filter>text</filter>
				<label translate="true">ID</label>
				<resizeDefaultWidth>200</resizeDefaultWidth>
			</settings>
		</column>
		<column name="image" class="Olegnax\InstagramMin\Ui\Component\Listing\Columns\Thumbnail" component="Magento_Ui/js/grid/columns/thumbnail" sortOrder="20">
			<settings>
				<label translate="true">Thumbnail</label>
				<sortable>false</sortable>
			</settings>
		</column>
		<column name="owner" sortOrder="30">
			<settings>
				<filter>text</filter>
				<label translate="true">Owner</label>
				<resizeDefaultWidth>200</resizeDefaultWidth>
			</settings>
		</column>
		<column name="is_active" component="Magento_Ui/js/grid/columns/select" sortOrder="40">
			<settings>
				<options class="Magento\Cms\Model\Block\Source\IsActive"/>
				<filter>select</filter>
				<dataType>select</dataType>
				<label translate="true">Status</label>
				<resizeDefaultWidth>100</resizeDefaultWidth>
			</settings>
		</column>
		<column name="taken_at_timestamp" sortOrder="50" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
			<settings>
				<filter>dateRange</filter>
				<dataType>date</dataType>
				<sorting>desc</sorting>
				<label translate="true">Created</label>
				<resizeDefaultWidth>150</resizeDefaultWidth>
			</settings>
		</column>
	</columns>
</listing>
