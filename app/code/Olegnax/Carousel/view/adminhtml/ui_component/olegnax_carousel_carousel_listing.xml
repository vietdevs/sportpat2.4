<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">olegnax_carousel_carousel_listing.olegnax_carousel_carousel_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>olegnax_carousel_carousel_columns</spinner>
		<deps>
			<dep>olegnax_carousel_carousel_listing.olegnax_carousel_carousel_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Carousel</label>
			</button>
		</buttons>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="olegnax_carousel_carousel_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Olegnax_Carousel::Carousel</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="olegnax_carousel_carousel_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>carousel_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="olegnax_carousel_carousel_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">olegnax_carousel_carousel_listing.olegnax_carousel_carousel_listing.olegnax_carousel_carousel_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">carousel_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" path="olegnax_carousel/Carousel/inlineEdit" xsi:type="url"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">olegnax_carousel_carousel_listing.olegnax_carousel_carousel_listing.olegnax_carousel_carousel_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>carousel_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="carousel_id" sortOrder="10">
			<settings>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="title" sortOrder="20">
			<settings>
				<sorting>asc</sorting>
				<filter>text</filter>
				<editor>
					<validation>
						<rule name="required-entry" xsi:type="boolean">true</rule>
					</validation>
					<editorType>text</editorType>
				</editor>
				<label translate="true">Title</label>
			</settings>
		</column>
		<column name="identifier" sortOrder="30">
			<settings>
				<filter>text</filter>
				<editor>
					<validation>
						<rule name="required-entry" xsi:type="boolean">true</rule>
					</validation>
					<editorType>text</editorType>
				</editor>
				<label translate="true">Identifier</label>
			</settings>
		</column>
		<column name="creation_time" sortOrder="40" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
			<settings>
				<filter>dateRange</filter>
				<dataType>date</dataType>
				<label translate="true">Created</label>
			</settings>
		</column>
		<column name="update_time" sortOrder="50" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
			<settings>
				<filter>dateRange</filter>
				<dataType>date</dataType>
				<label translate="true">Modified</label>
			</settings>
		</column>
		<actionsColumn class="Olegnax\Carousel\Ui\Component\Listing\Column\CarouselActions" name="actions" sortOrder="60">
			<settings>
				<indexField>carousel_id</indexField>
			</settings>
		</actionsColumn>
	</columns>
</listing>
